<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LostWonFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_fileName="typing.json"


        android:layout_above="@+id/lostTextView"

        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />


    <TextView
        android:id="@+id/lostTextView"
        android:text="You Lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_centerInParent="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lostTextView"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/playAgainButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Play Again"
            />
        <Button
            android:id="@+id/exitButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Exit to Home"
            />
    </LinearLayout>




</RelativeLayout>